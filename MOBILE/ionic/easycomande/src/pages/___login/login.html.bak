<ion-content padding center class="vertical-align-content">

  <div class="loginBox">

    <div align="center">
      <img src="assets/img/logo.png" class="logo" />
      <div class="errorMessage" *ngIf="errorMessageView">{{errorMessage}}</div>
    </div>

    <ion-list>

      <ion-item>
        <ion-label floating>Username</ion-label>
        <ion-input [(ngModel)]="username" type="text" value=""></ion-input>
      </ion-item>

      <ion-item>
        <ion-label floating>Password</ion-label>
        <ion-input [(ngModel)]="password" type="password" value=""></ion-input>
      </ion-item>

    </ion-list>

    <button ion-button large block (click)="login()">Sign In</button>

    <div align="center" class="versionApp" padding>
      Version <strong>1.0.03</strong>
    </div>

  </div>
</ion-content>